inherit qt4-qmake

DESCRIPTION="Qt Widgets for Technical Applications"
HOMEPAGE="http://qwt.sourceforge.net/"
SRC_URI="mirror://sourceforge/qwt/qwt-${PV}.tar.bz2"
SRC_DIR="qwt-${PV}"

PKG_NAMES="${PN} lib${PN} lib${PN}-dev"
PKG_HINTS="setup lib devel"
PKG_CONTENTS[0]=	# empty
PKG_CONTENTS[1]="usr/bin/*-${PV_MAJ}.dll ${QT4_PLUGINSDIR#/}/ usr/share/doc/"
PKG_CONTENTS[2]="${QT4_INCLUDEDIR#/} ${QT4_LIBDIR#/}"

src_install() {
	cd ${B}
	qt4_qmake_install

	rm -fr ${D}/usr/local/
}
